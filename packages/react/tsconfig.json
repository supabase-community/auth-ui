{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "outDir": "dist"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist", "build"]
}
